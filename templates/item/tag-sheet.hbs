<form class="item-sheet flexcol">
  <div class="half-tone-overlay"></div>
  <div class="name-panel comic-frame flexrow ">
    <div class="item-image">
      <img src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    </div>
    <div class="item-data flexcol">
      <div class="item-type panel-header">{{localize (concat "TYPES.Item." item.type)}}.</div>
      <input class="name-input" name="name" type="text" value="{{item.name}}">
    </div>
  </div>
  <div class="tabbed-panel flexcol">
    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="tab-header panel-header panel-title" data-tab="description">{{localize "Description."}}</a>
      <a class="tab-header panel-header panel-title" data-tab="effects">{{localize "Effects."}}</a>
    </nav>
    <div class="sheet-body comic-frame">
      <div class="tab description-panel flexcol" data-group="primary" data-tab="description">
        {{editor item.system.description target="system.description" button="true" engine="prosemirror"}}
      </div>
      <div class="tab effects-panel flexcol" data-group="primary" data-tab="effects">
        <div class="effect doc-list-header flexrow">
          <div class="effect-icon-dummy">
          </div>
          <div class="effect-data">
            {{localize "MVRPG.itemSheet.effects.dataHeader"}}
          </div>
          <a class="effect-action effect-create" data-action="create" data-tooltip="{{localize "MVRPG.itemSheet.effects.tooltips.create"}}">
            <i class="fa-solid fa-plus"></i>
          </a>
        </div>
        {{#each item.effects.contents as |effect|}}
          <div class="effect flexrow">
            <div class="effect-icon">
              <img src="{{effect.img}}" title="{{effect.name}}"/>
            </div>
            <a class="effect-action effect-data flexcol" data-action="edit" data-effect-id="{{effect.id}}" data-tooltip="{{localize "MVRPG.sheets.generic.tooltips.edit"}}">
              <div class="effect-name">
                {{effect.name}}
              </div>
              <div class="effect-changes">
                {{#each effect.changes as |change|}}
                  <div class="effect-change">
                    {{change.key}}: {{changeModeSymbol change}}{{change.value}}
                    {{#unless @last}}, {{/unless}}
                  </div>
                {{/each}}
              </div>
            </a>
            <div class="action-icons flexrow">
              <a class="effect-action effect-toggle" data-action="toggle" data-effect-id="{{effect.id}}">
                {{#if effect.disabled}}
                  <i class="fa-solid fa-toggle-off" data-tooltip="{{localize "MVRPG.itemSheet.effects.tooltips.toggleOn"}}"></i>
                {{else}}
                  <i class="fa-solid fa-toggle-on"  data-tooltip="{{localize "MVRPG.itemSheet.effects.tooltips.toggleOff"}}"></i>
                {{/if}}
              </a>
              <a class="effect-action effect-delete" data-action="delete" data-effect-id="{{effect.id}}" data-tooltip="{{localize "MVRPG.sheets.generic.tooltips.delete"}}">
                <i class="fa-solid fa-trash"></i>
              </a>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</form>
