<div class="dialog-item flexrow">
  <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.hasRoll"}}</div>
  <div class="dialog-input">
    <input name="system.roll.hasRoll"
           type="checkbox"
           {{checked document.system.roll.hasRoll}}>
  </div>
</div>

{{#if document.system.roll.hasRoll }}
  <div class="dialog-item item-roll-data flexrow">
    <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.rollType"}}</div>
    <select class="dialog-input" name="system.roll.type">
      {{selectOptions (mvGetConfigObj "rollTypes") selected=document.system.roll.type localize=true}}
    </select>
  </div>

  <div class="dialog-item item-roll-data flexrow">
    <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.rollAbility"}}</div>
    <select class="dialog-input" name="system.roll.ability">
      {{selectOptions (mvGetConfigObj "abilities") selected=document.system.roll.ability localize=true}}
    </select>
  </div>

  <div class="dialog-item item-roll-data flexrow">
    <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.against"}}</div>
    <select class="dialog-input" name="system.roll.against">
      {{selectOptions (mvGetConfigObj "abilities") selected=document.system.roll.against localize=true}}
    </select>
  </div>

  {{#mvCompare document.system.roll.type "combat"}}
    <div class="dialog-item item-roll-data flexrow">
      <div class="dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.lifepoolTarget"}}
      </div>
      <select class="dialog-input" name="system.roll.lifepoolTarget">
        <option value="none">{{localize "MVRPG.sheets.generic.none"}}</option>
        {{selectOptions (mvGetConfigObj "lifepoolTargets") selected=document.system.roll.lifepoolTarget localize=true}}
      </select>
    </div>
  {{/mvCompare}}

  <div class="dialog-item item-roll-data flexrow">
    <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.rollBonus"}}</div>
    <div class="dialog-input">
      <input name="system.roll.bonus"
             type="number"
             value="{{document.system.roll.bonus}}">
    </div>
  </div>

  <div class="dialog-item item-roll-data flexrow">
    <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.edges"}}</div>
    <div class="dialog-input">
      <input name="system.roll.edges"
             type="number"
             value="{{document.system.roll.edges}}">
    </div>
  </div>

  <div class="dialog-item item-roll-data flexrow">
    <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.troubles"}}</div>
    <div class="dialog-input">
      <input name="system.roll.troubles"
             type="number"
             value="{{document.system.roll.troubles}}">
    </div>
  </div>
{{/if}}
