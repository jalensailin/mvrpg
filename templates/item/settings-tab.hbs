<div class="mvrpg-dialog-container flexcol">
  <div class="mvrpg-dialog-section flexcol">

    <div class="mvrpg-dialog-item flexrow">
      <div class="mvrpg-dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.powerSets"}}
      </div>
      <a class="mvrpg-dialog-data configure-power-sets" data-tooltip="{{localize "MVRPG.sheets.itemSheet.settings.tooltips.configurePowerSets"}}">
        {{#each item.system.powerSets as |powerSetSlug|}}
          <span>{{localize (concat "MVRPG.sheets.generic.powerSets." powerSetSlug)}}
          {{~#unless @last}}, {{/unless}}</span>
        {{/each}}
        <i class="fa-solid fa-gear fa-xs"></i>
      </a>
    </div>

    <div class="mvrpg-dialog-item flexrow">
      <div class="mvrpg-dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.action"}}
      </div>
      {{#select item.system.action}}
        <select class="mvrpg-dialog-input" name="system.action">
          {{#each (mvGetConfigObj "powerActions") as |actionI18nString actionSlug|}}
            <option value="{{actionSlug}}">{{localize actionI18nString}}</option>
          {{/each}}
        </select>
      {{/select}}
    </div>

    <div class="mvrpg-dialog-item flexrow">
      <div class="mvrpg-dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.duration"}}
      </div>
      {{#select item.system.duration}}
        <select class="mvrpg-dialog-input" name="system.duration">
          {{#each (mvGetConfigObj "powerDurations") as |durationI18nString durationSlug|}}
            <option value="{{durationSlug}}">{{localize durationI18nString}}</option>
          {{/each}}
        </select>
      {{/select}}
    </div>

    <div class="mvrpg-dialog-item flexrow">
      <div class="mvrpg-dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.cost"}}
      </div>
      <div class="mvrpg-dialog-input">
        <input name="system.cost" type="number" value="{{item.system.cost}}">
      </div>
    </div>

    <div class="mvrpg-dialog-item flexrow">
      <div class="mvrpg-dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.isAttack"}}
      </div>
      <div class="mvrpg-dialog-input">
        <input name="system.isAttack" type="checkbox" {{checked item.system.isAttack}}>
      </div>
    </div>

    <div class="mvrpg-dialog-item flexrow">
      <div class="mvrpg-dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.range"}}
      </div>
      <div class="mvrpg-dialog-input">
        <input name="system.range.value" type="number" value="{{item.system.range.value}}">
      </div>
    </div>

    <div class="mvrpg-dialog-item flexrow">
      <div class="mvrpg-dialog-label">
        {{localize "MVRPG.sheets.itemSheet.settings.labels.multiplyByRank"}}
      </div>
      <div class="mvrpg-dialog-input">
        <input name="system.range.multiplyByRank" type="checkbox" {{checked item.system.range.multiplyByRank}}>
      </div>
    </div>

  </div>
</div>
