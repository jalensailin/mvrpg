<div class="tab dialog-container sheet-body comic-frame flexcol {{tabs.settings.cssClass}}"
     data-group="{{tabs.settings.group}}"
     data-tab="{{tabs.settings.id}}">
  <div class="dialog-section flexcol">
    <div class="dialog-item flexrow">
      <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.powerSets"}}</div>
      <a class="dialog-data"
         data-action="configureMultipleSelections"
         data-selection-set="powerSets"
         data-tooltip="{{localize "MVRPG.sheets.itemSheet.settings.tooltips.configurePowerSets"}}">
        {{#each item.system.powerSets as |powerSetSlug| }}
          <span>{{localize (concat "MVRPG.sheets.generic.powerSets." powerSetSlug)}}
          {{~#unless @last}}, {{/unless}}</span>
        {{/each}}
        <i class="fa-solid fa-gear fa-xs"></i>
      </a>
    </div>

    <div class="dialog-item flexrow">
      <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.action"}}</div>
      <a class="dialog-data"
         data-action="configureMultipleSelections"
         data-selection-set="actions"
         data-tooltip="{{localize "MVRPG.sheets.itemSheet.settings.tooltips.configurePowerSets"}}">
        {{#each item.system.actions as |action| }}
          <span>{{localize (mvGetConfigProperty "actions" action)}}
          {{~#unless @last}}, {{/unless}}</span>
        {{/each}}
        <i class="fa-solid fa-gear fa-xs"></i>
      </a>
    </div>

    <div class="dialog-item flexrow">
      <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.duration"}}</div>
      <select class="dialog-input" name="system.duration">
        {{selectOptions (mvGetConfigObj "powerDurations") selected=item.system.duration localize=true}}
      </select>
    </div>

    <div class="dialog-item flexrow">
      <div class="dialog-label">{{localize "MVRPG.sheets.itemSheet.settings.labels.cost"}}</div>
      <div class="dialog-input">
        <input name="system.cost" type="number" value="{{item.system.cost}}">
      </div>
    </div>

    {{> (systemFilePath "templates/item/mixins/range-settings.hbs")}}

    {{> (systemFilePath "templates/item/mixins/hasRoll-settings.hbs")}}

  </div>
</div>
