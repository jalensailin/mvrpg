<div class="mvrpg-damage-card comic-frame flexcol">
  <div class="half-tone-overlay"></div>
  <div class="damage-label panel-header panel-title">
    {{localize "MVRPG.rolls.damage"}} ({{localize (concat "MVRPG.sheets.superSheet.abilities." ability)}})
  </div>
  <div class="damage-total">
    {{#if fantasticResult}}({{/if}}({{dieMResult}} * {{damageMultiplier}}) + {{damageModifier}}{{#if fantasticResult}}) * 2{{/if}} = <span class="total-number">{{total}}</span>
  </div>
  <div class="damage-application">
    <a class="apply-damage" data-lifepool-target="{{lifepoolTarget}}" data-damage-total="{{total}}">
      <i class="fa-solid fa-heart-crack"></i> {{localize "MVRPG.rolls.applyDamage"}}
    </a>
  </div>
</div>
