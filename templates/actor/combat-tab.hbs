<div class="tab combat-panel flexcol" data-group="primary" data-tab="combat">
  <section class="damage-section flexcol">
    <div class="combat-panel-title">{{localize "MVRPG.sheets.superSheet.dataHeaders.damageMultipliers"}}</div>
    <div class="damage-multiplier-list flexrow">
      {{#each damageData as |abilityData|}}
        <div class="damage-multiplier-item flexcol">
          <div class="damage-multiplier-value">
            x{{abilityData.damageMultiplier}}
            <span class="damage-modifier">
              ({{numberFormat abilityData.damageModifier sign=true}})
            </span>
          </div>
          <div class="damage-multiplier-label">{{localize (concat "MVRPG.sheets.superSheet.abilities." abilityData.name)}}</div>
        </div>
      {{/each}}
    </div>
  </section>
  <section class="rollable-section flexcol">
    <div class="combat-panel-title">{{localize "MVRPG.sheets.superSheet.dataHeaders.actions"}}</div>
    <div class="rollable-list doc-list flexrow">
      {{#each rollableItems as |item|}}
        <div class="rollable-item doc-entry flexrow" data-item-id="{{item.id}}">
          <a class="doc-action doc-icon" data-action="toChat" data-tooltip="{{localize "MVRPG.sheets.generic.tooltips.toChat"}}">
            <img src="{{item.img}}" title="{{item.name}}"/>
            <i class="overlay fa-solid fa-comment"></i>
          </a>
          <a class="doc-action doc-data flexcol" data-action="edit" data-tooltip="{{localize "MVRPG.sheets.generic.tooltips.edit"}}">
            <div class="doc-name">
              {{item.name}}
            </div>
          </a>
          <div class="action-icons flexrow">
            <a class="doc-action rollable" data-tooltip="{{localize "MVRPG.sheets.superSheet.tooltips.rollFromItem"}}">
              <i class="fa-solid fa-dice"></i>
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  </section>
  <section class="team-maneuver-section flexcol">
    <div class="combat-panel-title">{{localize "MVRPG.sheets.superSheet.dataHeaders.teamManeuver"}}</div>
    <div class="team-maneuver-item flexcol {{#if actor.system.teamManeuver.active}}maneuver-active{{/if}}">
      <div class="team-maneuver-data flexrow">
        {{#if actor.system.teamManeuver.active}}
          <a class="toggle-maneuver" data-tooltip="{{localize "MVRPG.sheets.superSheet.tooltips.deactivateManeuver"}}"><i class="fa-solid fa-handshake-simple-slash"></i> </a>
        {{else}}
          <a class="toggle-maneuver" data-tooltip="{{localize "MVRPG.sheets.superSheet.tooltips.activateManeuver"}}"><i class="fa-solid fa-handshake-simple"></i> </a>
        {{/if}}
        <input class="team-maneuver-average-rank" name="system.teamManeuver.averageRank" type="number" value="{{actor.system.teamManeuver.averageRank}}">
        <div class="team-maneuver-level">{{actor.system.teamManeuver.maneuverLevel}}</div>
        <div class="team-maneuver-cost">{{actor.system.teamManeuver.focusCost}}</div>
      </div>
      <div class="team-maneuver-labels flexrow">
        {{#select actor.system.teamManeuver.choice}}
          <select class="team-maneuver-select" name="system.teamManeuver.choice">
            {{#each (mvGetConfigObj "teamManeuvers") as |i18nString maneuver|}}
              <option value="{{maneuver}}">{{localize i18nString}}</option>
            {{/each}}
          </select>
        {{/select}}
        <div>{{localize "MVRPG.sheets.superSheet.teamManeuvers.averageRank"}}</div>
        <div>{{localize "MVRPG.sheets.superSheet.teamManeuvers.level"}}</div>
        <div>{{localize "MVRPG.sheets.superSheet.teamManeuvers.cost"}}</div>
      </div>
    </div>
  </section>
</div>
