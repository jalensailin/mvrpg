<div class="doc-list-header flexrow">
  <div class="doc-icon-dummy">
  </div>
  <div class="doc-data">
    {{localize (concat "MVRPG.heroSheet.dataHeaders." type)}}
  </div>
  <a class="doc-action doc-create" data-action="create" data-doc-type="{{type}}" data-tooltip="{{localize (concat "MVRPG.heroSheet.tooltips.createItem." type)}}">
    <i class="fa-solid fa-plus"></i>
  </a>
</div>

{{#each docList as |doc|}}
  <div class="doc-entry flexrow">
    <a class="doc-action doc-icon" data-action="toChat" data-doc-id="{{doc.id}}" data-tooltip="{{localize "MVRPG.sheets.generic.tooltips.toChat"}}">
      <img src="{{doc.img}}" title="{{doc.name}}"/>
      <i class="overlay fa-solid fa-comment"></i>
    </a>
    <a class="doc-action doc-data flexcol" data-action="edit" data-doc-id="{{doc.id}}" data-tooltip="{{localize "MVRPG.sheets.generic.tooltips.edit"}}">
      <div class="doc-name">
        {{doc.name}}
      </div>
    </a>
    <div class="action-icons flexrow">
      <a class="doc-action doc-delete" data-action="delete" data-doc-id="{{doc.id}}" data-tooltip="{{localize "MVRPG.sheets.generic.tooltips.delete"}}">
        <i class="fa-solid fa-trash"></i>
      </a>
    </div>
  </div>
{{/each}}
