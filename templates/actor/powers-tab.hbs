<div class="tab powers-panel flexcol {{tabs.powers.cssClass}}"
     data-group="{{tabs.powers.group}}"
     data-tab="{{tabs.powers.id}}">
  <nav class="powers-tabs tabs" data-group="secondary">
    <a class="sub-tab-header" data-tab="powers">{{localize "MVRPG.sheets.superSheet.titles.powers"}}</a>
    <a class="sub-tab-header" data-tab="traits">{{localize "MVRPG.sheets.superSheet.titles.traits"}}</a>
    <a class="sub-tab-header" data-tab="tags">{{localize "MVRPG.sheets.superSheet.titles.tags"}}</a>
    <a class="sub-tab-header" data-tab="inventory">{{localize "MVRPG.sheets.superSheet.titles.inventory"}}</a>
    <a class="sub-tab-header" data-tab="effects">{{localize "MVRPG.sheets.superSheet.titles.effects"}}</a>
  </nav>
  <div class="powers-body">
    <div class="tab doc-list flexcol" data-group="secondary" data-tab="powers">
      {{> (systemFilePath "templates/actor/document-list.hbs") docList=actor.itemTypes.power type="power"}}
    </div>
    <div class="tab doc-list flexcol" data-group="secondary" data-tab="traits">
      {{> (systemFilePath "templates/actor/document-list.hbs") docList=actor.itemTypes.trait type="trait"}}
    </div>
    <div class="tab doc-list flexcol" data-group="secondary" data-tab="tags">
      {{> (systemFilePath "templates/actor/document-list.hbs") docList=actor.itemTypes.tag type="tag"}}
    </div>
    <div class="tab doc-list flexcol"
         data-group="secondary"
         data-tab="inventory">
      {{> (systemFilePath "templates/actor/document-list.hbs") docList=actor.itemTypes.simpleItem type="simpleItem"}}
    </div>
    <div class="tab effects-list doc-list flexcol"
         data-group="secondary"
         data-tab="effects">
      {{> (systemFilePath "templates/effects/effects-list.hbs") allEffects}}
    </div>
  </div>
</div>
